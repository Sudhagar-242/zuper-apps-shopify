{% style %}
          .Digital-products-hero{
            background: #085552;
          }
          .hero-section{
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 20px;
            gap: 20px;
          }
          .hero-right-side{
            width: 50%;
            padding: 80px 20px;
            padding-left: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
          }
          .hero-left-side{
            width: 50%;
            overflow: hidden;
            margin: auto;
          }
          .hero-left-side .slide img{
              width: 100%;
          }
    .digital-product-hero-badge {
      box-sizing: border-box;
      color: rgb(0, 169, 162);
      display: inline;
      font-family: source-code-pro, monospace;
      font-size: 20px;
      font-weight: 400;
      height: auto;
      line-height: 30px;
      text-align: left;
      text-rendering: optimizelegibility;
      text-size-adjust: 100%;
      width: auto;
      -webkit-font-smoothing: antialiased;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
    .digital-product-hero-tittle {
    box-sizing: border-box;
    color: rgb(255, 255, 255);
    display: block;
    font-family: "sofia-pro", sans-serif;
    font-size: 40px;
    font-weight: 700;
    line-height: 48px;
    margin: 0 0 16px 0;
    text-align: left;
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
    unicode-bidi: isolate;
  }

        .btn-primary {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 55.6px;
    padding: 13.6px 30px;
    background-color: rgb(0, 169, 162);
    color: rgb(255, 255, 255);
    font-family: "sofia-pro", sans-serif;
    font-size: 18px;
    font-weight: 600;
    line-height: 25.2px;
    text-align: center;
    text-decoration: none;
    border: 1.6px solid rgb(0, 169, 162);
    border-radius: 0px;
    box-sizing: border-box;
    box-shadow: none;
    cursor: pointer;
    user-select: none;
    vertical-align: middle;
    margin-bottom: 10px;
    transition: color 0.15s ease-in-out,
                background-color 0.15s ease-in-out,
                border-color 0.15s ease-in-out,
                box-shadow 0.15s ease-in-out;
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }
    .custom-slider {
      position: relative;
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
      overflow: hidden;
    }
     .custom-slider .slides-wrapper {
      position: relative;
      height: 100%;
    }
     .custom-slider .slide {
      position: absolute;
      width: 100%;
      height: 100%;
      display: none;
    }
     .custom-slider .slide img {
      width: 100%;
      display: block;
    }
     .custom-slider .slide-nav {
      position: absolute;
      top: 50%;
      background: rgba(255,255,255,0.7);
      border: none;
      border-radius: 50%;
      font-size: 24px;
      width: 40px;
      height: 40px;
      line-height: 40px;
      cursor: pointer;
      user-select: none;
      transform: translateY(-50%);
    }
     .custom-slider #prev {
      left: 10px;
    }
     .custom-slider #next {
      right: 10px;
    }
{% endstyle %}

<div class="hero-section">
  {% comment %} Left Side {% endcomment %}
  <div class="hero-right-side">
    <p class="digital-product-hero-badge">
      &lt;<span
        >/<span class=" tagline"><span>ONE CLICK COD FORM WITH UPSELLS</span></span></span
      >&gt;
    </p>
    <h1 class="digital-product-hero-tittle">{{ product.title }}</h1>
    <a href="{{ section.settings.digital-products-hero-btn-link }}" class="btn-primary">
      {{- section.settings['digital-products-hero-btn-tittle'] -}}
    </a>
  </div>

  <section class="custom-slider">
    <div class="slides-wrapper">
      {% for image in product.images %}
        <div class="slide" style="{% if forloop.first %}display:block{% else %}display:none{% endif %}">
          <img src="{{ image.src | img_url }}" alt="{{ image.alt | escape }}">
        </div>
      {% endfor %}
    </div>

    <button id="prev" class="slide-nav">&#10094;</button>
    <button id="next" class="slide-nav">&#10095;</button>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    let currentSlide = 0;
    const slides = document.querySelectorAll('.custom-slider .slide');
    const totalSlides = slides.length;

    const showSlide = (index) => {
      slides.forEach((slide, i) => {
        slide.style.display = i === index ? 'block' : 'none';
      });
    };

    document.getElementById('prev').addEventListener('click', () => {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(currentSlide);
    });

    document.getElementById('next').addEventListener('click', () => {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    });

    showSlide(currentSlide);
  });
</script>

{% schema %}
{
  "name": "digital_products_hero",
  "tag": "section",
  "class": "Digital-products-hero",
  "settings": [
    {
      "type": "richtext",
      "id": "digital-products-hero-tittle",
      "label": "digital products hero tittle"
    },
    {
      "type": "text",
      "id": "digital-products-hero-description",
      "label": "digital products Button Text",
      "default": "Products Description"
    },
    {
      "type": "text",
      "id": "digital-products-hero-btn-tittle",
      "label": "digital products Button Text",
      "default": "Install Now"
    },
    {
      "type": "url",
      "id": "digital-products-hero-btn-link",
      "label": "digital products Button Link"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Image Alt Text"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption Text"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.main-product.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "t:sections.main-product.blocks.text.settings.text.default",
          "label": "t:sections.main-product.blocks.text.settings.text.label"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "t:sections.main-product.blocks.text.settings.text_style.options__1.label"
            },
            {
              "value": "subtitle",
              "label": "t:sections.main-product.blocks.text.settings.text_style.options__2.label"
            },
            {
              "value": "uppercase",
              "label": "t:sections.main-product.blocks.text.settings.text_style.options__3.label"
            }
          ],
          "default": "body",
          "label": "t:sections.main-product.blocks.text.settings.text_style.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "digital_products_hero"
    }
  ]
}
{% endschema %}
