.brand-slider-container {
    margin: 0 auto;
    padding: 20px 0;
    max-width: 700px;
    overflow: hidden;
    display: flex;
    > * {
      flex: 0 0 100%;
    }
}

  /* Group the cards for better structure. */
.brand-slider {
    display: flex;
    gap: 20px;
    padding-right: 20px;
    will-change: transform; /* We should be nice to the browser - let it know what we're going to animate. */
    animation: scrolling 10s linear infinite;
  }

  .brand-logo-wrapper{
    width: 100%;
    color: white;
    border-radius: 24px;
    box-shadow: rgba(0, 0, 0, 10%) 5px 5px 20px 0;
    padding: 20px;
    font-size: xx-large;
    justify-content: center;
    align-items: center;
    min-height: 200px;
  }

  @keyframes scrolling {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
{% endstylesheet %}

<section class="brand-slider-section">
  {% if section.settings.heading != blank %}
    <h2 class="brand-slider-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="brand-slider-container">
    {% comment %} coursal {% endcomment %}
    <div class="brand-slider"> 
    {% comment %} group {% endcomment %}
      {% for block in section.blocks %}
        <div class="brand-logo-box"> 
          <div class="brand-logo-wrapper">
            {% if block.settings.logo_image != blank %}
              <img src="{{ block.settings.logo_image | image_url: width: 140 }}" alt="{{ block.settings.logo_alt_text | escape }}" class="logo-wrap">
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    {% comment %} Duplicate logos for seamless infinite scroll {% endcomment %}
    <div aria-hidden class="brand-slider"> 
    {% comment %} group {% endcomment %}
      {% for block in section.blocks %}
        <div class="brand-logo-box"> 
          <div class="brand-logo-wrapper">
            {% if block.settings.logo_image != blank %}
              <img src="{{ block.settings.logo_image | image_url: width: 140 }}" alt="{{ block.settings.logo_alt_text | escape }}" class="logo-wrap">
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div> 
  </div>
</section>

{% schema %}
{
  "name": "Brand Logo Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "logo_alt_text",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Brand Logo Slider",
      "category": "Sliders"
    }
  ]
}
{% endschema %}
