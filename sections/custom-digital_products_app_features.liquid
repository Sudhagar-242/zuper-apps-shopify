
{% stylesheet %}
/* Optional: Add your custom styles here for layout and design */
.digi-pro-features-section {
  text-align: center;
  padding: 40px 0;
  max-width: 1200px;
}

.digi-pro-features-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
  margin-bottom: 32px;
}

.digi-feature-block {
  display: flex;
  align-items: center;
  background: #eafffa;
  border-radius: 8px;
  padding: 20px 32px;
  margin-bottom: 28px;
}

.digi-feature-image-box {
  flex-shrink: 0;
  background: #eafffa;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130px;
  height: 130px;
  margin-right: 28px;
}

.digi-feature-image-box img {
  width: 80px;
  height: 80px;
  object-fit: contain;
}

.digi-feature-content h3 {
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 10px 0;
}

.digi-feature-content p {
  font-size: 1.2rem;
  margin: 0;
}

{% endstylesheet %}


<section class="digi-pro-features-section">
  {% if section.settings.digi_products_app_features_head != blank %}
    <h2>{{ section.settings.digi_products_app_features_head }}</h2>
  {% endif %}
  <div class="digi-pro-features-container">
    {% for block in section.blocks %}
      <div class="digi-feature-block">
  <div class="digi-feature-image-box">
    {% if block.settings.digi_products_app_features_block_image != blank %}
      <img src="{{ block.settings.digi_products_app_features_block_image | image_url: width: 80 }}" alt="{{ block.settings.digi_products_app_features_block_head }}">
    {% endif %}
  </div>
  <div class="digi-feature-content">
    <h3>{{ block.settings.digi_products_app_features_block_head }}</h3>
    <p>{{ block.settings.digi_products_app_features_block_para }}</p>
  </div>
</div>

    {% endfor %}
  </div>
  {% if section.settings.digi_products_app_features_btn != blank and section.settings.digi_products_app_features_url != blank %}
    <a href="{{ section.settings.digi_products_app_features_url }}" class="digi-pro-features-btn">
      {{ section.settings.digi_products_app_features_btn }}
    </a>
  {% endif %}
</section>






{% schema %}
{
  "name": "Digi_Pro_App_Features",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "digi_products_app_features_head",
      "label": "Heading_Text"
    },
    {
      "type": "text",
      "id": "digi_products_app_features_btn",
      "label": "Heading_Text"
    },
    {
      "type": "url",
      "id": "digi_products_app_features_url",
      "label": "Heading_Text"
    }
  ],
  "blocks": [
    {
        "type": "feature_block",
      "name": "Feature Block",
      "settings": [
        {
          "type": "text",
          "id": "digi_products_app_features_block_head",
          "label": "Block Head"
        },
        {
          "type": "textarea",
          "id": "digi_products_app_features_block_para",
          "label": "Block Para"
        },
        {
          "type": "image_picker",
          "id": "digi_products_app_features_block_image",
          "label": "Block Image"
        }
      ]
    }
  ],
  "presets": [
    {
        "name": "Digi_Pro_App_Features"
    }
  ]
}
{% endschema %}
