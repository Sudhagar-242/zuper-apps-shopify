<style>
  /* Top Section */
  .top-section {
    position: relative;
    height: 587px;
    color: white;
    padding: 40px 60px;
    background-position: center;
    display: flex;
    flex-direction: row;
    background: linear-gradient(
        360deg,
        rgba(0, 0, 0, 0) 64.4%,
        rgba(0, 0, 0, 0.8) 100%
      ),
      linear-gradient(0deg, rgba(0, 0, 0, 0.12), rgba(0, 0, 0, 0.12));
    background-repeat: no-repeat;
    width: 100%;
    background-size: cover;
  }

  .top-section h1 {
    font-size: 42px;
    margin: 0 0 20px;
    font-weight: 700;
    line-height: 140%;
    padding-top: 24px;
    color: #fff;
    position: relative;
    z-index: 1;
  }

  .top-section .description-box {
    max-width: 450px;
    background: #1c191acc;
    padding: 34px 42px 27px 27px;
    border-radius: 7px;
    line-height: 23px;
    font-size: 16px;
    font-weight: 400;
    margin-left: auto;
    max-height: max-content;
    margin-top: 85px;
    letter-spacing: -0.03px;
    margin-right: 80px;
    line-height: 28px;
    position: relative;
    z-index: 1;
  }
  .description-box p {
    margin: 0;
    padding-bottom: 29px;
  }
  .top-section .btn-explore {
    background-color: #ed1c24;
    border: none;
    padding: 10px 20px;
    font-weight: 700;
    font-size: 16px;
    color: white;
    border-radius: 4px;
    cursor: pointer;
    transition: 0.5s;
  }
  .top-section .btn-explore:hover {
    background-color: #fff;
    color: #000;
    transition: 0.5s;
  }

  /* Bottom tabss */
  .tabss-wrapper {
    display: flex;
    gap: 33px;
  }

  .tabs {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgb(0 0 0 / 0.1);
    width: 373px;
    text-align: center;
    padding: 36px 33px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    position: relative;
    display: flex !important;
    align-items: center;
    gap: 49px;
    transition: 0.5s;
    border: 0.7px solid transparent;
  }
  .tabs:hover {
    background-color: #b22c28;
    color: white;
    font-weight: 700;
    box-shadow: 0px 15px 38px 0px #b1b1b140;
    border: 0.7px solid #dbdbdb;
    transition: 0.5s;
  }
  .tabs:hover h3 {
    color: #fff;
    transition: 0.5s;
  }
  .tabs.active {
    background-color: #b22c28;
    color: white;
    font-weight: 700;
    box-shadow: 0px 15px 38px 0px #b1b1b140;
    border: 0.7px solid #dbdbdb;
  }
  .tabs.active h3 {
    color: white;
    transition: 0.5s;
  }
  .tabs h3 {
    font-weight: 700;
    font-size: 20px;
    user-select: none;
    color: #1c191a;
    margin: 0;
  }
  .tabs img {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid transparent;
    transition: border-color 0.3s ease;
  }
  .top-section:after {
    content: "";
    background: linear-gradient(
        360deg,
        rgba(0, 0, 0, 0) 64.4%,
        rgba(0, 0, 0, 0.8) 100%
      ),
      linear-gradient(0deg, rgba(0, 0, 0, 0.12), rgba(0, 0, 0, 0.12));
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    height: 100%;
    top: 0;
  }
  .slider-nav {
    display: none;
  }
  /* Mobile .slider */
  @media screen and (max-width: 989px) {
    .tabss-wrapper {
      flex-wrap: nowrap;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 15px;
      padding: 20px 15px;
    }
    .tabss-wrapper::-webkit-scrollbar {
      display: none;
    }
    .tabs {
      flex: 0 0 100%;
      scroll-snap-align: center;
    }
    .slider-nav {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 10px;
    }
    .slider-nav button {
      background: transparent;
      border-radius: 30px;
      cursor: pointer;
      border: 0.8px solid #000000;
      width: 46px;
      height: 46px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  @media screen and (max-width: 989px) {
    .top-section {
      height: auto;
      padding: 0px 20px;
      flex-direction: column;
    }
    .top-section h1 {
      font-size: 38px;
    }
    .tabss-wrapper {
      justify-content: flex-start;
    }
    .top-section .description-box {
      margin-right: 0;
      margin-top: 0;
      padding: 20px;
      margin-bottom: 30px;
    }
    .tabss-wrapper {
      margin-top: auto;
    }
  }
  /* Desktop slider */
  @media screen and (min-width: 990px) {
    .tabss-wrapper {
      overflow-x: auto;
      scroll-snap-type: x mandatory;

      scroll-behavior: smooth;
      max-width: 1188px;
      margin: -90px auto;
      flex-wrap: nowrap;
      justify-content: normal;
      scrollbar-width: none;
      padding-bottom: 20px;
    }

    .tabs {
      flex: 0 0 373px; /* width of each card */
      scroll-snap-align: start;
    }

    .slider-nav {
      display: flex;
      justify-content: center;
      gap: 10px;
      position: relative;
      max-width: 1300px;
      margin: 10px auto;
    }
    #slidePrev,
    #slideNext {
      position: absolute;
      top: -24px;
      transition: 0.5s;
    }
    #slidePrev {
      left: 0;
    }
    #slideNext {
      right: 0;
    }
    .slider-nav button {
      background: transparent;
      border-radius: 30px;
      cursor: pointer;
      border: 0.8px solid #000000;
      width: 46px;
      height: 46px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #slidePrev:hover,
    #slideNext:hover {
      transition: 0.5s;
      transform: scale(1.1);
    }
  }
</style>

