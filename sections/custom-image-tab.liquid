{% javascript %}
  // Selectors for tabs and UI elements
  const tabs = document.querySelectorAll('.tabs');
  const wrapper = document.querySelector('.tabs-wrapper');
  const topSection = document.getElementById('topSection');
  const topTitle = document.getElementById('topTitle');
  const topDescription = document.getElementById('topDescription');
  const topButton = document.querySelector('.btn-explore');
  const sliderNav = document.querySelector('.slider-nav');
  const slideAmount = 320; // Horizontal scroll step for arrows

  // Show or hide navigation arrows based on screen width and tab count
  function toggleArrowsVisibility() {
    const isDesktop = window.innerWidth >= 990;
    if (isDesktop) {
      sliderNav.style.display = (tabs.length > 3) ? 'flex' : 'none';
    } else {
      sliderNav.style.display = 'flex';
    }
  }

  // Activate a tab and update the top section with tab-specific content
  function activateTab(tab) {
    tabs.forEach(t => t.classList.remove('active'));
    tab.classList.add('active');

    const content = {
      title: tab.getAttribute('data-title'),
      description: tab.getAttribute('data-description'),
      buttonText: tab.getAttribute('data-button-text'),
      buttonUrl: tab.getAttribute('data-button-url'),
      backgroundImage: tab.getAttribute('data-background-image')
    };

    topSection.style.backgroundImage = `url('${content.backgroundImage}')`;
    topTitle.textContent = content.title;
    topDescription.textContent = content.description;
    topButton.textContent = content.buttonText;
    topButton.href = content.buttonUrl;
  }

  // Determine which tab is closest to the center of the wrapper viewport
function getCenteredTab() {
  let closest = null;
  let smallestDistance = Infinity;
  const wrapperScrollLeft = wrapper.scrollLeft;
  const wrapperWidth = wrapper.offsetWidth;
  const halfWrapperWidth = wrapperWidth / 2;
  const wrapperCenter = wrapperScrollLeft + halfWrapperWidth;

  console.group('Calculating centered tab');
  console.log(`Wrapper scrollLeft: ${wrapperScrollLeft}`);
  console.log(`Wrapper width: ${wrapperWidth}`);
  console.log(`Half wrapper width: ${halfWrapperWidth}`);
  console.log(`Calculated wrapper center position (scrollLeft + halfWidth): ${wrapperCenter}`);
  
  tabs.forEach((tab, index) => {
    const tabOffsetLeft = tab.offsetLeft;
    const tabWidth = tab.offsetWidth;
    const halfTabWidth = tabWidth / 2;
    const tabCenter = tabOffsetLeft + halfTabWidth;
    const distance = Math.abs(wrapperCenter - tabCenter);

    console.group(`Tab ${index + 1} details`);
    console.log(`Tab offsetLeft: ${tabOffsetLeft}`);
    console.log(`Tab width: ${tabWidth}`);
    console.log(`Half of tab width: ${halfTabWidth}`);
    console.log(`Calculated tab center position (offsetLeft + halfWidth): ${tabCenter}`);
    console.log(`Distance from wrapper center: |${wrapperCenter} - ${tabCenter}| = ${distance}`);

    if (distance < smallestDistance) {
      smallestDistance = distance;
      closest = tab;
      console.log(`ðŸŸ¢ New closest tab selected (smallestDistance updated to ${smallestDistance})`);
    } else {
      console.log(closest.classList);
      if (closest.classList) {
        console.log(index);
      }
      console.log(`ðŸ”´ Distance ${distance} not less than current smallestDistance ${smallestDistance}`);
    }
    console.groupEnd();
  });

  if (closest) {
    console.log('Final closest tab element:', closest);
  } else {
    console.warn('No tabs found to select!');
  }
  console.groupEnd();

  return closest;
}


  // Scroll wrapper left or right and update active tab accordingly
  function scrollWrapper(amount) {
    wrapper.scrollBy({ left: amount, behavior: 'smooth' });
    setTimeout(() => {
      const centeredTab = getCenteredTab();
      if (centeredTab) activateTab(centeredTab);
    }, 300);
  }

  // Initialize on page load
  function init() {
    toggleArrowsVisibility();

    // Set initial active tab if none active
    if (!document.querySelector('.tabs.active') && tabs.length > 0) {
      activateTab(tabs[0]);
    }

    // Event listeners for tab clicks
    tabs.forEach(tab => tab.addEventListener('click', () => activateTab(tab)));

    // Arrow button click handlers
    document.getElementById('slidePrev').addEventListener('click', () => scrollWrapper(-slideAmount));
    document.getElementById('slideNext').addEventListener('click', () => scrollWrapper(slideAmount));

    // Update arrows visibility on window resize
    window.addEventListener('resize', toggleArrowsVisibility);
  }

  // Run initialization
  init();
{% endjavascript %}


